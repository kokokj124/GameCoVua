<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="./static/css/style.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <title>King Chess</title>
    <link rel="icon" type="image/png" href="./images/favicon.png"/>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg">  
        <div class="container">
            <div class="row">
              <div class="col-sm">
              </div>
              <div class="col-sm">
                <div class="row">
                    <h1 class='txtdeepshadow'><b>King <b style="color: yellow;">Chess</b></b></h1>
                </div>
                <div style="height: 32vh;"></div>
                    <div class="row">
                      <form action="./CoVua/app2player.html">
                        <button class="punch" type="submit">Play now</button>
                      </form>
                    </div>
                    <div class="row">
                        <button type="button" class="punch" data-toggle="modal" data-target="#roomModal">Join room</button>
                    </div>
                    <div class="row">
                      <button class="punch" type="button" data-toggle="modal" data-target="#createModal">Create new room</button>
                    </div>
                    <div class="row">
                      <form action="./">
                          <button class="punch" type="submit">Back</button>
                      </form>
                  </div>
              </div>
              <div class="col-sm">
              </div>
            </div>
            
            <!-- Modal -->
            <div class="modal fade" id="roomModal" role="dialog">
              <div class="modal-dialog">
              
                <!-- Modal content-->
                <div class="modal-content">
                  <div class="modal-header">
                    <h4 class="modal-title">Room name</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                  </div>
                  <div class="modal-body">
                        <!-- <form action=""> -->
                          <select id="room" name="room">
                          </select>
                        <!-- </form> -->
                  </div>
                  <div class="modal-footer">
                    <button class="btn btn-outline-success" type="submit" id="online-join-room">Join</button>
                    <button class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                  </div>
                </div>
                
              </div>
            </div>


            <!-- SettingModal -->
            <div class="modal fade" id="createModal" role="dialog">
                <div class="modal-dialog">
                
                  <!-- Modal content-->
                  <div class="modal-content">
                    <div class="modal-header">
                      <h4 class="modal-title">Room name</h4>
                      <button type="button" class="close" data-dismiss="modal">&times;</button>
                    </div>
                    <div class="modal-body">
                          <input type="text" placeholder="Room name..." id="room-name">
                    </div>
                    <div class="modal-footer">
                      <button class="btn btn-outline-success" type="button" id="btn-online-creat">Create</button>
                      <button class="btn btn-outline-danger" data-dismiss="modal">Close</button>
                    </div>
                  </div>
                  
                </div>
              </div>
            
        </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script type="module" src="./static/js/socket_client/online.js"></script>
  </body>
</html>